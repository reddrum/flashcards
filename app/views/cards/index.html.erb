<div class="col-md-6 col-md-offset-3">
	<table class="table table-striped"
	  <tr>	    
	    <th><%= "Original" %></th>
	    <th><%= "Translated" %></th>
	    <th><%= "Image" %></th>
	    <th><%= "Review date" %></th>
	    <th></th>
	    <th></th>
	  </tr>

	 	<% @cards.each do |card| %>
	    <tr>
	      <td><%= card.original_text %></td>
	      <td><%= card.translated_text %></td>
	      <td><%= image_tag card.image.url(:small) %></td>
	      <td><%= card.review_date.to_datetime.strftime("%d/%m/%Y") %></td>	
	    </tr>
  	<% end %>
	</table>
</div>



